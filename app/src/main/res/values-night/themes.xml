<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidHomeworks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/defaultColorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/defaultColorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/defaultColorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/DefaultButtonAppearance</item>
    </style>
    <style name="DefaultButtonAppearance" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="DateAndTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/defaultColorPrimary</item>                   <!--header background-->
        <item name="android:windowBackground">@color/textColorSecondary</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorAccent</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->
    </style>

</resources>